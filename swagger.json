{
  "swagger": "2.0",
  "info": {
    "title": "Anime and Songs API",
    "description": "API for Anime and Songs",
    "version": "1.0.0"
  },
  "host": "cse341-project2-u5by.onrender.com",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/anime/": {
      "get": {
        "tags": [ "Anime" ],
        "summary": "Get all anime",
        "responses": {
          "200": { "description": "List of all anime" }
        }
      },
      "post": {
        "tags": [ "Anime" ],
        "summary": "Create new anime",
        "parameters": [
          {
            "name": "Anime",
            "in": "body",
            "required": true,
            "schema": { "type": "object", "properties": { "Title": { "type": "string" }, "Year": { "type": "String" } } }
          }
        ],
        "responses": {
          "204": { "description": "Anime created" }
        }
      }
    },
    "/anime/{id}": {
      "get": {
        "tags": [ "Anime" ],
        "summary": "Get a single anime",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Anime object" }
        }
      },
      "put": {
        "tags": [ "Anime" ],
        "summary": "Update an anime",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "Anime",
            "in": "body",
            "required": true,
            "schema": { "type": "object", "properties": { "Title": { "type": "string" }, "Year": { "type": "string" } } }
          }
        ],
        "responses": {
          "204": { "description": "Anime updated" }
        }
      },
      "delete": {
        "tags": [ "Anime" ],
        "summary": "Delete an anime",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "Anime deleted" }
        }
      }
    },
    "/songs/": {
      "get": {
        "tags": [ "Songs" ],
        "summary": "Get all songs",
        "responses": {
          "200": { "description": "List of all songs" }
        }
      },
      "post": {
        "tags": [ "Songs" ],
        "summary": "Create new song",
        "parameters": [
          {
            "name": "Song",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Title": { "type": "string" },
                "Artist": { "type": "string" },
                "Year": { "type": "string" },
                "Album": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "Song created" }
        }
      }
    },
    "/songs/{id}": {
      "get": {
        "tags": [ "Songs" ],
        "summary": "Get a single song",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "200": { "description": "Song object" }
        }
      },
      "put": {
        "tags": [ "Songs" ],
        "summary": "Update a song",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" },
          {
            "name": "Song",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "Title": { "type": "string" },
                "Artist": { "type": "string" },
                "Year": { "type": "string" },
                "Album": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "204": { "description": "Song updated" }
        }
      },
      "delete": {
        "tags": [ "Songs" ],
        "summary": "Delete a song",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "type": "string" }
        ],
        "responses": {
          "204": { "description": "Song deleted" }
        }
      }
    }
  }
}